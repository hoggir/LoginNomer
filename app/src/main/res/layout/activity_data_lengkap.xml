<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataLengkapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rvProf"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                android:textSize="35dp"
                android:fontFamily="@font/baloo"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circlebg">

                <ImageView
                    android:id="@+id/ivProf"
                    android:layout_marginTop="5dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_profile"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_marginTop="194dp"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_wave2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <EditText
            android:textColor="@color/colorPrimary"
            android:id="@+id/regNama"
            android:padding="10dp"
            android:background="@drawable/round_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_personprofile"
            android:drawablePadding="15dp"
            android:hint="Nama"/>

        <EditText
            android:textColor="@color/colorPrimary"
            android:id="@+id/regAlamatktp"
            android:background="@drawable/round_border"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_loc"
            android:drawablePadding="15dp"
            android:hint="Alamat KTP"/>

        <EditText
            android:textColor="@color/colorPrimary"
            android:id="@+id/regAlamattgl"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:hint="Alamat Tinggal"/>

        <EditText
            android:textColor="@color/colorPrimary"
            android:id="@+id/regNohp"
            android:background="@drawable/round_border"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:hint="No HP"/>

        <Button
            android:background="@drawable/round_bg"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:id="@+id/btSimpanDatareg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Simpan"/>
    </LinearLayout>

    </LinearLayout>
</ScrollView>