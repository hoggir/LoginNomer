<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rvProf"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:textSize="35dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/white"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlebg">

            <ImageView
                android:id="@+id/ivProf"
                android:layout_marginTop="5dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_marginTop="194dp"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_wave2"/>


    <Button
        android:layout_width="250dp"
        android:id="@+id/prf"
        android:layout_height="wrap_content"
        android:layout_marginTop="-37dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/baloo"
        android:background="@drawable/profile_button_bk"
        android:text="Kembali" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/primary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvPNama"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat KTP"
                android:textColor="@color/primary"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvPAlamatKTP"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Tinggal"
                android:textColor="@color/primary"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvPAlamatTinggal"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textColor="@color/primary"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvPNoHP"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

        </LinearLayout>

        <Button
            android:id="@+id/btProfile"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/round_bg"/>

        </LinearLayout>

</LinearLayout>
</ScrollView>